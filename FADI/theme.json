{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "useRootPaddingAwareAlignments": true,
        "layout": {
            "contentSize": "1200px",
            "wideSize": "1400px"
        },
        "color": {
            "custom": true,
            "customDuotone": false,
            "customGradient": true,
            "defaultDuotone": false,
            "defaultGradients": false,
            "defaultPalette": false,
            "palette": [
                {
                    "color": "#667eea",
                    "name": "اللون الأساسي",
                    "slug": "primary"
                },
                {
                    "color": "#764ba2",
                    "name": "اللون الثانوي", 
                    "slug": "secondary"
                },
                {
                    "color": "#28a745",
                    "name": "اللون الأخضر",
                    "slug": "success"
                },
                {
                    "color": "#dc3545",
                    "name": "اللون الأحمر",
                    "slug": "danger"
                },
                {
                    "color": "#ffc107",
                    "name": "اللون الأصفر",
                    "slug": "warning"
                },
                {
                    "color": "#17a2b8",
                    "name": "اللون الأزرق الفاتح",
                    "slug": "info"
                },
                {
                    "color": "#f8f9fa",
                    "name": "اللون الفاتح",
                    "slug": "light"
                },
                {
                    "color": "#343a40",
                    "name": "اللون الداكن",
                    "slug": "dark"
                },
                {
                    "color": "#ffffff",
                    "name": "الأبيض",
                    "slug": "white"
                },
                {
                    "color": "#000000",
                    "name": "الأسود",
                    "slug": "black"
                }
            ],
            "gradients": [
                {
                    "gradient": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
                    "name": "التدرج الأساسي",
                    "slug": "primary-gradient"
                },
                {
                    "gradient": "linear-gradient(135deg, #28a745 0%, #20c997 100%)",
                    "name": "التدرج الأخضر",
                    "slug": "success-gradient"
                },
                {
                    "gradient": "linear-gradient(135deg, #dc3545 0%, #fd7e14 100%)",
                    "name": "التدرج الأحمر",
                    "slug": "danger-gradient"
                }
            ]
        },
        "typography": {
            "customFontSize": true,
            "fontStyle": true,
            "fontWeight": true,
            "letterSpacing": true,
            "lineHeight": true,
            "textDecoration": true,
            "textTransform": true,
            "dropCap": false,
            "fontSizes": [
                {
                    "fluid": {
                        "min": "0.875rem",
                        "max": "1rem"
                    },
                    "size": "0.875rem",
                    "name": "صغير",
                    "slug": "small"
                },
                {
                    "fluid": {
                        "min": "1rem",
                        "max": "1.125rem"
                    },
                    "size": "1rem",
                    "name": "متوسط",
                    "slug": "medium"
                },
                {
                    "fluid": {
                        "min": "1.125rem",
                        "max": "1.25rem"
                    },
                    "size": "1.125rem",
                    "name": "كبير",
                    "slug": "large"
                },
                {
                    "fluid": {
                        "min": "1.75rem",
                        "max": "2.25rem"
                    },
                    "size": "1.75rem",
                    "name": "كبير جداً",
                    "slug": "x-large"
                },
                {
                    "fluid": {
                        "min": "2.25rem",
                        "max": "3rem"
                    },
                    "size": "2.25rem",
                    "name": "ضخم",
                    "slug": "xx-large"
                }
            ],
            "fontFamilies": [
                {
                    "fontFamily": "'Tajawal', Arial, sans-serif",
                    "name": "تجوال",
                    "slug": "tajawal"
                },
                {
                    "fontFamily": "'Cairo', Arial, sans-serif",
                    "name": "القاهرة",
                    "slug": "cairo"
                },
                {
                    "fontFamily": "'Amiri', serif",
                    "name": "أميري",
                    "slug": "amiri"
                },
                {
                    "fontFamily": "system-ui, -apple-system, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif",
                    "name": "النظام",
                    "slug": "system"
                }
            ]
        },
        "spacing": {
            "customSpacingSize": true,
            "spacingScale": {
                "operator": "*",
                "increment": 1.5,
                "steps": 7,
                "mediumStep": 1.5,
                "unit": "rem"
            },
            "spacingSizes": [
                {
                    "size": "0.25rem",
                    "name": "صغير جداً",
                    "slug": "10"
                },
                {
                    "size": "0.5rem",
                    "name": "صغير",
                    "slug": "20"
                },
                {
                    "size": "1rem",
                    "name": "متوسط",
                    "slug": "30"
                },
                {
                    "size": "1.5rem",
                    "name": "كبير",
                    "slug": "40"
                },
                {
                    "size": "2rem",
                    "name": "كبير جداً",
                    "slug": "50"
                },
                {
                    "size": "3rem",
                    "name": "ضخم",
                    "slug": "60"
                },
                {
                    "size": "4rem",
                    "name": "عملاق",
                    "slug": "70"
                },
                {
                    "size": "5rem",
                    "name": "هائل",
                    "slug": "80"
                }
            ],
            "units": [
                "%",
                "px",
                "em",
                "rem",
                "vh",
                "vw"
            ]
        },
        "border": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true
        },
        "dimensions": {
            "minHeight": true
        },
        "position": {
            "sticky": true
        },
        "custom": {
            "rtl": true,
            "direction": "rtl",
            "language": "ar",
            "security": {
                "enableCSRF": true,
                "enableXSSProtection": true,
                "enableSQLInjectionProtection": true
            },
            "performance": {
                "enableLazyLoading": true,
                "enableCaching": true,
                "enableMinification": true
            },
            "accessibility": {
                "enableHighContrast": false,
                "enableFocusIndicators": true,
                "enableScreenReaderOptimizations": true
            }
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--light)",
            "text": "var(--wp--preset--color--dark)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--tajawal)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6"
        },
        "spacing": {
            "blockGap": "1rem"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--secondary)"
                    }
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xx-large)",
                    "fontWeight": "700",
                    "lineHeight": "1.2"
                },
                "color": {
                    "text": "var(--wp--preset--color--dark)"
                },
                "spacing": {
                    "margin": {
                        "bottom": "var(--wp--preset--spacing--40)"
                    }
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "fontWeight": "600",
                    "lineHeight": "1.3"
                },
                "color": {
                    "text": "var(--wp--preset--color--dark)"
                },
                "spacing": {
                    "margin": {
                        "bottom": "var(--wp--preset--spacing--30)"
                    }
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontWeight": "600",
                    "lineHeight": "1.4"
                },
                "color": {
                    "text": "var(--wp--preset--color--dark)"
                },
                "spacing": {
                    "margin": {
                        "bottom": "var(--wp--preset--spacing--20)"
                    }
                }
            },
            "button": {
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--white)"
                },
                "typography": {
                    "fontWeight": "600"
                },
                "spacing": {
                    "padding": {
                        "top": "0.75rem",
                        "bottom": "0.75rem",
                        "left": "1.5rem",
                        "right": "1.5rem"
                    }
                },
                "border": {
                    "radius": "0.375rem"
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--secondary)"
                    }
                }
            }
        },
        "blocks": {
            "core/navigation": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "fontWeight": "500"
                }
            },
            "core/post-title": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "fontWeight": "700",
                    "lineHeight": "1.2"
                },
                "color": {
                    "text": "var(--wp--preset--color--dark)"
                }
            },
            "core/button": {
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--white)"
                },
                "typography": {
                    "fontWeight": "600"
                },
                "border": {
                    "radius": "0.375rem"
                }
            },
            "core/quote": {
                "border": {
                    "width": "0 0 0 4px",
                    "style": "solid",
                    "color": "var(--wp--preset--color--primary)"
                },
                "spacing": {
                    "padding": {
                        "right": "var(--wp--preset--spacing--40)"
                    }
                },
                "typography": {
                    "fontStyle": "italic"
                }
            },
            "core/pullquote": {
                "border": {
                    "width": "4px 0 4px 0",
                    "style": "solid",
                    "color": "var(--wp--preset--color--primary)"
                }
            },
            "core/separator": {
                "color": {
                    "background": "var(--wp--preset--color--light)"
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "رأس الصفحة",
            "area": "header"
        },
        {
            "name": "footer", 
            "title": "تذييل الصفحة",
            "area": "footer"
        }
    ],
    "customTemplates": [
        {
            "name": "dashboard",
            "title": "لوحة التحكم",
            "postTypes": ["page"]
        },
        {
            "name": "quotes",
            "title": "عروض الأسعار",
            "postTypes": ["page"]
        },
        {
            "name": "employees",
            "title": "الموظفين",
            "postTypes": ["page"]
        }
    ]
}