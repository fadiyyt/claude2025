{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "custom": true,
            "customDuotone": true,
            "customGradient": true,
            "defaultGradients": false,
            "defaultPalette": false,
            "palette": [
                {
                    "slug": "primary",
                    "color": "#667eea",
                    "name": "اللون الأساسي"
                },
                {
                    "slug": "secondary", 
                    "color": "#764ba2",
                    "name": "اللون الثانوي"
                },
                {
                    "slug": "accent",
                    "color": "#f093fb", 
                    "name": "لون التمييز"
                },
                {
                    "slug": "success",
                    "color": "#4caf50",
                    "name": "لون النجاح"
                },
                {
                    "slug": "warning",
                    "color": "#ff9800",
                    "name": "لون التحذير"
                },
                {
                    "slug": "error",
                    "color": "#f44336", 
                    "name": "لون الخطأ"
                },
                {
                    "slug": "info",
                    "color": "#2196f3",
                    "name": "لون المعلومات"
                },
                {
                    "slug": "dark",
                    "color": "#2c3e50",
                    "name": "اللون الداكن"
                },
                {
                    "slug": "light",
                    "color": "#ecf0f1",
                    "name": "اللون الفاتح"
                },
                {
                    "slug": "white",
                    "color": "#ffffff",
                    "name": "الأبيض"
                },
                {
                    "slug": "gray-100",
                    "color": "#f8f9fa",
                    "name": "رمادي فاتح جداً"
                },
                {
                    "slug": "gray-500",
                    "color": "#6c757d", 
                    "name": "رمادي متوسط"
                },
                {
                    "slug": "gray-900",
                    "color": "#212529",
                    "name": "رمادي داكن"
                }
            ],
            "gradients": [
                {
                    "slug": "primary-gradient",
                    "gradient": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
                    "name": "التدرج الأساسي"
                },
                {
                    "slug": "accent-gradient", 
                    "gradient": "linear-gradient(135deg, #f093fb 0%, #f5576c 100%)",
                    "name": "تدرج التمييز"
                },
                {
                    "slug": "success-gradient",
                    "gradient": "linear-gradient(135deg, #4caf50 0%, #8bc34a 100%)",
                    "name": "تدرج النجاح"
                }
            ]
        },
        "typography": {
            "customFontSize": true,
            "dropCap": false,
            "fontStyle": true,
            "fontWeight": true,
            "letterSpacing": true,
            "lineHeight": true,
            "textDecoration": true,
            "textTransform": true,
            "fontFamilies": [
                {
                    "fontFamily": "'Tajawal', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
                    "name": "Tajawal",
                    "slug": "tajawal"
                },
                {
                    "fontFamily": "'Cairo', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif", 
                    "name": "Cairo",
                    "slug": "cairo"
                },
                {
                    "fontFamily": "monospace",
                    "name": "Monospace",
                    "slug": "monospace"
                }
            ],
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.875rem",
                    "name": "صغير"
                },
                {
                    "slug": "normal", 
                    "size": "1rem",
                    "name": "عادي"
                },
                {
                    "slug": "medium",
                    "size": "1.125rem",
                    "name": "متوسط"
                },
                {
                    "slug": "large",
                    "size": "1.25rem", 
                    "name": "كبير"
                },
                {
                    "slug": "x-large",
                    "size": "1.5rem",
                    "name": "كبير جداً"
                },
                {
                    "slug": "xx-large",
                    "size": "2rem",
                    "name": "ضخم"
                }
            ]
        },
        "spacing": {
            "blockGap": true,
            "margin": true,
            "padding": true,
            "units": ["px", "em", "rem", "vh", "vw", "%"],
            "spacingSizes": [
                {
                    "slug": "10",
                    "size": "0.25rem",
                    "name": "صغير جداً"
                },
                {
                    "slug": "20", 
                    "size": "0.5rem",
                    "name": "صغير"
                },
                {
                    "slug": "30",
                    "size": "1rem",
                    "name": "متوسط"
                },
                {
                    "slug": "40",
                    "size": "1.5rem", 
                    "name": "كبير"
                },
                {
                    "slug": "50",
                    "size": "2rem",
                    "name": "كبير جداً"
                },
                {
                    "slug": "60",
                    "size": "3rem",
                    "name": "ضخم"
                }
            ]
        },
        "border": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true
        },
        "custom": {
            "borderRadius": {
                "small": "0.25rem",
                "medium": "0.375rem", 
                "large": "0.5rem",
                "xlarge": "0.75rem"
            },
            "boxShadow": {
                "small": "0 1px 3px rgba(0, 0, 0, 0.12), 0 1px 2px rgba(0, 0, 0, 0.24)",
                "medium": "0 4px 6px rgba(0, 0, 0, 0.07), 0 2px 4px rgba(0, 0, 0, 0.06)",
                "large": "0 10px 15px rgba(0, 0, 0, 0.1), 0 4px 6px rgba(0, 0, 0, 0.05)"
            },
            "transition": {
                "fast": "0.15s ease",
                "normal": "0.3s ease", 
                "slow": "0.5s ease"
            }
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "1200px"
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--white)",
            "text": "var(--wp--preset--color--dark)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--tajawal)",
            "fontSize": "var(--wp--preset--font-size--normal)",
            "lineHeight": "1.6"
        },
        "spacing": {
            "blockGap": "var(--wp--preset--spacing--30)"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xx-large)",
                    "fontWeight": "700",
                    "lineHeight": "1.2"
                },
                "color": {
                    "text": "var(--wp--preset--color--dark)"
                },
                "spacing": {
                    "margin": {
                        "bottom": "var(--wp--preset--spacing--30)"
                    }
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "fontWeight": "600",
                    "lineHeight": "1.3"
                },
                "color": {
                    "text": "var(--wp--preset--color--dark)"
                },
                "spacing": {
                    "margin": {
                        "bottom": "var(--wp--preset--spacing--20)"
                    }
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontWeight": "600",
                    "lineHeight": "1.4"
                },
                "color": {
                    "text": "var(--wp--preset--color--dark)"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "fontWeight": "500"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--normal)",
                    "fontWeight": "500"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)", 
                    "fontWeight": "500"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--secondary)"
                    }
                }
            },
            "button": {
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--white)"
                },
                "typography": {
                    "fontWeight": "500"
                },
                "border": {
                    "radius": "var(--wp--custom--border-radius--medium)"
                },
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--20)",
                        "bottom": "var(--wp--preset--spacing--20)",
                        "left": "var(--wp--preset--spacing--30)",
                        "right": "var(--wp--preset--spacing--30)"
                    }
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--secondary)"
                    }
                }
            }
        },
        "blocks": {
            "core/group": {
                "spacing": {
                    "margin": {
                        "bottom": "var(--wp--preset--spacing--40)"
                    }
                }
            },
            "core/paragraph": {
                "spacing": {
                    "margin": {
                        "bottom": "var(--wp--preset--spacing--30)"
                    }
                },
                "typography": {
                    "lineHeight": "1.8"
                }
            },
            "core/heading": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "fontWeight": "700",
                    "lineHeight": "1.2"
                },
                "color": {
                    "text": "var(--wp--preset--color--dark)"
                }
            },
            "core/button": {
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--white)"
                },
                "typography": {
                    "fontWeight": "600"
                },
                "border": {
                    "radius": "0.375rem"
                }
            },
            "core/quote": {
                "border": {
                    "width": "0 0 0 4px",
                    "style": "solid",
                    "color": "var(--wp--preset--color--primary)"
                },
                "spacing": {
                    "padding": {
                        "right": "var(--wp--preset--spacing--40)"
                    }
                },
                "typography": {
                    "fontStyle": "italic"
                }
            },
            "core/pullquote": {
                "border": {
                    "width": "4px 0 4px 0",
                    "style": "solid",
                    "color": "var(--wp--preset--color--primary)"
                }
            },
            "core/separator": {
                "color": {
                    "background": "var(--wp--preset--color--light)"
                }
            },
            "core/code": {
                "color": {
                    "background": "var(--wp--preset--color--gray-100)",
                    "text": "var(--wp--preset--color--dark)"
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--monospace)"
                },
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--20)",
                        "bottom": "var(--wp--preset--spacing--20)",
                        "left": "var(--wp--preset--spacing--20)",
                        "right": "var(--wp--preset--spacing--20)"
                    }
                },
                "border": {
                    "radius": "var(--wp--custom--border-radius--small)"
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "رأس الصفحة",
            "area": "header"
        },
        {
            "name": "footer", 
            "title": "تذييل الصفحة",
            "area": "footer"
        }
    ],
    "customTemplates": [
        {
            "name": "dashboard",
            "title": "لوحة التحكم",
            "postTypes": ["page"]
        },
        {
            "name": "quotes",
            "title": "عروض الأسعار",
            "postTypes": ["page"]
        },
        {
            "name": "employees",
            "title": "الموظفين", 
            "postTypes": ["page"]
        },
        {
            "name": "tenders",
            "title": "المناقصات",
            "postTypes": ["page"]
        },
        {
            "name": "documents",
            "title": "الوثائق الحكومية",
            "postTypes": ["page"]
        }
    ]
}