{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"title": "الحلول العملية",
	"description": "قالب ووردبريس عصري للحلول العملية",
	"customTemplates": [
		{
			"name": "blank",
			"title": "صفحة فارغة",
			"postTypes": ["page", "post"]
		},
		{
			"name": "search-results",
			"title": "نتائج البحث",
			"postTypes": ["page"]
		}
	],
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"layout": {
			"contentSize": "800px",
			"wideSize": "1200px"
		},
		"spacing": {
			"blockGap": true,
			"margin": true,
			"padding": true,
			"units": ["px", "em", "rem", "vh", "vw", "%"]
		},
		"border": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		},
		"color": {
			"background": true,
			"custom": true,
			"customDuotone": true,
			"customGradient": true,
			"defaultGradients": false,
			"defaultPalette": false,
			"link": true,
			"text": true,
			"palette": [
				{
					"name": "الأساسي",
					"slug": "primary",
					"color": "#007cba"
				},
				{
					"name": "الثانوي",
					"slug": "secondary",
					"color": "#34495e"
				},
				{
					"name": "التمييز",
					"slug": "accent",
					"color": "#e74c3c"
				},
				{
					"name": "النجاح",
					"slug": "success",
					"color": "#27ae60"
				},
				{
					"name": "التحذير",
					"slug": "warning",
					"color": "#f39c12"
				},
				{
					"name": "المعلومات",
					"slug": "info",
					"color": "#3498db"
				},
				{
					"name": "الأساس",
					"slug": "base",
					"color": "#ecf0f1"
				},
				{
					"name": "النص الأساسي",
					"slug": "foreground",
					"color": "#2c3e50"
				},
				{
					"name": "الخلفية",
					"slug": "background",
					"color": "#ffffff"
				},
				{
					"name": "النص الثانوي",
					"slug": "tertiary",
					"color": "#7f8c8d"
				},
				{
					"name": "أسود",
					"slug": "black",
					"color": "#000000"
				},
				{
					"name": "أبيض",
					"slug": "white",
					"color": "#ffffff"
				}
			],
			"gradients": [
				{
					"name": "التدرج الأساسي",
					"slug": "primary-gradient",
					"gradient": "linear-gradient(135deg, #007cba 0%, #3498db 100%)"
				},
				{
					"name": "تدرج الغروب",
					"slug": "sunset-gradient",
					"gradient": "linear-gradient(135deg, #f39c12 0%, #e74c3c 100%)"
				},
				{
					"name": "التدرج الطبيعي",
					"slug": "nature-gradient",
					"gradient": "linear-gradient(135deg, #27ae60 0%, #2ecc71 100%)"
				}
			],
			"duotone": [
				{
					"name": "الأزرق والأبيض",
					"slug": "blue-white",
					"colors": ["#007cba", "#ffffff"]
				},
				{
					"name": "الرمادي والأسود",
					"slug": "gray-black",
					"colors": ["#95a5a6", "#2c3e50"]
				}
			]
		},
		"typography": {
			"customFontSize": true,
			"dropCap": false,
			"fluid": true,
			"fontStyle": true,
			"fontWeight": true,
			"letterSpacing": true,
			"lineHeight": true,
			"textDecoration": true,
			"textTransform": true,
			"fontFamilies": [
				{
					"name": "نوتو عربي",
					"slug": "noto-arabic",
					"fontFamily": "'Noto Sans Arabic', 'Segoe UI', Tahoma, Arial, sans-serif",
					"fontFace": [
						{
							"fontFamily": "Noto Sans Arabic",
							"fontWeight": "300 800",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": ["file:./assets/fonts/NotoSansArabic-Variable.woff2"]
						}
					]
				},
				{
					"name": "النظام",
					"slug": "system",
					"fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif"
				},
				{
					"name": "مونوسبيس",
					"slug": "monospace",
					"fontFamily": "Consolas, 'Andale Mono WT', 'Andale Mono', 'Lucida Console', 'Lucida Sans Typewriter', 'DejaVu Sans Mono', 'Bitstream Vera Sans Mono', 'Liberation Mono', 'Nimbus Mono L', Monaco, 'Courier New', Courier, monospace"
				}
			],
			"fontSizes": [
				{
					"name": "صغير جداً",
					"slug": "x-small",
					"size": "0.75rem",
					"fluid": {
						"min": "0.75rem",
						"max": "0.875rem"
					}
				},
				{
					"name": "صغير",
					"slug": "small",
					"size": "0.875rem",
					"fluid": {
						"min": "0.875rem",
						"max": "1rem"
					}
				},
				{
					"name": "متوسط",
					"slug": "medium",
					"size": "1rem",
					"fluid": {
						"min": "1rem",
						"max": "1.125rem"
					}
				},
				{
					"name": "كبير",
					"slug": "large",
					"size": "1.25rem",
					"fluid": {
						"min": "1.125rem",
						"max": "1.5rem"
					}
				},
				{
					"name": "كبير جداً",
					"slug": "x-large",
					"size": "1.75rem",
					"fluid": {
						"min": "1.5rem",
						"max": "2rem"
					}
				},
				{
					"name": "ضخم",
					"slug": "xx-large",
					"size": "2.5rem",
					"fluid": {
						"min": "2rem",
						"max": "3rem"
					}
				}
			]
		},
		"dimensions": {
			"minHeight": true
		},
		"position": {
			"sticky": true
		},
		"shadow": {
			"defaultPresets": false,
			"presets": [
				{
					"name": "ظل طبيعي",
					"slug": "natural",
					"shadow": "0 1px 3px rgba(0, 0, 0, 0.12), 0 1px 2px rgba(0, 0, 0, 0.24)"
				},
				{
					"name": "ظل عميق",
					"slug": "deep",
					"shadow": "0 14px 28px rgba(0, 0, 0, 0.25), 0 10px 10px rgba(0, 0, 0, 0.22)"
				},
				{
					"name": "ظل حاد",
					"slug": "sharp",
					"shadow": "5px 5px 0px 0px var(--wp--preset--color--primary)"
				},
				{
					"name": "ظل ملون",
					"slug": "outlined",
					"shadow": "0 0 0 3px var(--wp--preset--color--primary)"
				}
			]
		},
		"blocks": {
			"core/button": {
				"border": {
					"radius": true
				},
				"color": {
					"background": true,
					"text": true
				},
				"spacing": {
					"padding": true
				},
				"typography": {
					"fontSize": true,
					"fontWeight": true
				}
			},
			"core/group": {
				"spacing": {
					"padding": true,
					"margin": true,
					"blockGap": true
				},
				"border": {
					"color": true,
					"radius": true,
					"style": true,
					"width": true
				}
			},
			"core/heading": {
				"color": {
					"background": true,
					"text": true
				},
				"typography": {
					"fontSize": true,
					"fontWeight": true,
					"lineHeight": true,
					"letterSpacing": true
				}
			},
			"core/navigation": {
				"spacing": {
					"blockGap": true
				}
			},
			"core/post-content": {
				"spacing": {
					"blockGap": true
				}
			},
			"core/columns": {
				"spacing": {
					"blockGap": true,
					"padding": true,
					"margin": true
				}
			},
			"core/column": {
				"spacing": {
					"padding": true,
					"blockGap": true
				}
			}
		}
	},
	"styles": {
		"blocks": {
			"core/button": {
				"border": {
					"radius": "8px",
					"width": "2px",
					"style": "solid",
					"color": "var(--wp--preset--color--primary)"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--white)"
				},
				"spacing": {
					"padding": {
						"top": "12px",
						"bottom": "12px",
						"left": "24px",
						"right": "24px"
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "600",
					"fontFamily": "var(--wp--preset--font-family--noto-arabic)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--white)"
						},
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--white)"
							}
						}
					}
				}
			},
			"core/group": {
				"spacing": {
					"padding": {
						"top": "0",
						"bottom": "0",
						"left": "0",
						"right": "0"
					},
					"blockGap": "1.5rem"
				}
			},
			"core/heading": {
				"color": {
					"text": "var(--wp--preset--color--foreground)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--noto-arabic)",
					"fontWeight": "700",
					"lineHeight": "1.3"
				}
			},
			"core/navigation": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--noto-arabic)",
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "500"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--foreground)"
						},
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--primary)"
							}
						}
					}
				}
			},
			"core/post-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--noto-arabic)",
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"fontWeight": "700",
					"lineHeight": "1.2"
				},
				"color": {
					"text": "var(--wp--preset--color--foreground)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--foreground)"
						},
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--primary)"
							}
						}
					}
				}
			},
			"core/site-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--noto-arabic)",
					"fontSize": "var(--wp--preset--font-size--large)",
					"fontWeight": "800"
				},
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--primary)"
						},
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--accent)"
							}
						}
					}
				}
			}
		},
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--foreground)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--noto-arabic)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"lineHeight": "1.6"
		},
		"spacing": {
			"blockGap": "1.5rem",
			"padding": {
				"top": "0",
				"bottom": "0",
				"left": "1rem",
				"right": "1rem"
			}
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--accent)"
					}
				},
				":focus": {
					"color": {
						"text": "var(--wp--preset--color--accent)"
					}
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)",
					"fontWeight": "800",
					"lineHeight": "1.2"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"fontWeight": "700",
					"lineHeight": "1.3"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"fontWeight": "600",
					"lineHeight": "1.4"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "600",
					"lineHeight": "1.5"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontWeight": "600",
					"lineHeight": "1.5"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-small)",
					"fontWeight": "600",
					"lineHeight": "1.5"
				}
			}
		}
	}
}