{
  "name": "practical-solutions-pro",
  "version": "2.2.2",
  "description": "قالب ووردبريس احترافي للحلول العملية مع تقنية Block Theme المتقدمة",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:css && npm run build:js && npm run postbuild",
    "build:css": "npm run sass && npm run postcss && npm run minify:css",
    "build:js": "npm run webpack && npm run minify:js",
    "sass": "sass src/scss/main.scss dist/css/main.css --style=expanded",
    "postcss": "postcss dist/css/main.css --use autoprefixer --replace",
    "minify:css": "cleancss -o dist/css/main.min.css dist/css/main.css",
    "webpack": "webpack --mode=production",
    "minify:js": "terser dist/js/main.js -o dist/js/main.min.js --compress --mangle",
    "watch": "npm run watch:css & npm run watch:js",
    "watch:css": "sass --watch src/scss:dist/css --style=expanded",
    "watch:js": "webpack --mode=development --watch",
    "dev": "npm run watch",
    "lint:css": "stylelint src/scss/**/*.scss --fix",
    "lint:js": "eslint src/js/**/*.js --fix",
    "optimize:images": "node scripts/optimize-images.js",
    "generate:icons": "node scripts/generate-icons.js",
    "test": "npm run lint:css && npm run lint:js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean && npm run create-dirs",
    "postbuild": "npm run optimize:images && npm run generate:icons",
    "create-dirs": "node scripts/create-directories.js"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^9.1.0",
    "clean-css-cli": "^5.6.0",
    "eslint": "^8.40.0",
    "postcss": "^8.4.0",
    "postcss-cli": "^10.1.0",
    "rimraf": "^5.0.0",
    "sass": "^1.62.0",
    "sharp": "^0.32.0",
    "stylelint": "^15.6.0",
    "terser": "^5.17.0",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not op_mini all"
  ],
  "keywords": [
    "wordpress",
    "theme",
    "block-theme",
    "arabic",
    "rtl",
    "practical-solutions"
  ],
  "author": "Your Name",
  "license": "GPL-3.0"
}