{
  "name": "practical-solutions-pro",
  "version": "2.3.0",
  "description": "قالب WordPress احترافي للحلول العملية مع دعم كامل للغة العربية",
  "keywords": [
    "wordpress",
    "theme",
    "arabic",
    "rtl",
    "block-theme",
    "practical-solutions"
  ],
  "author": "Practical Solutions Team",
  "license": "GPL-2.0-or-later",
  "homepage": "https://practical-solutions.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/practical-solutions/practical-solutions-pro"
  },
  "bugs": {
    "url": "https://github.com/practical-solutions/practical-solutions-pro/issues"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "cross-env NODE_ENV=production webpack --mode production",
    "build:dev": "webpack --mode development",
    "clean": "rimraf dist/*",
    "serve": "webpack serve --mode development",
    "analyze": "webpack-bundle-analyzer dist/js/*.js",
    "lint:js": "eslint src/js/**/*.js --fix",
    "lint:css": "stylelint src/scss/**/*.scss --fix",
    "format": "prettier --write \"src/**/*.{js,scss,css}\"",
    "test": "jest",
    "optimize:images": "node scripts/optimize-images.js",
    "create:icons": "node scripts/generate-icons.js",
    "setup": "npm install && npm run build",
    "precommit": "npm run lint:js && npm run lint:css && npm run format",
    "prepare": "husky install",
    "zip": "zip -r practical-solutions-pro.zip . -x node_modules/\\* .git/\\* *.log"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "rtlcss": "^4.1.1",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "stylelint": "^15.11.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard-scss": "^11.1.0",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "intersection-observer": "^0.12.2",
    "lazysizes": "^5.3.2",
    "swiper": "^10.3.1"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.scss": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "config": {
    "theme_name": "Practical Solutions Pro",
    "theme_slug": "practical-solutions-pro",
    "theme_prefix": "ps",
    "theme_version": "2.3.0"
  },
  "wordpress": {
    "theme_uri": "https://practical-solutions.com/themes/practical-solutions-pro",
    "author_uri": "https://practical-solutions.com",
    "requires": "6.0",
    "tested": "6.4",
    "requires_php": "8.0",
    "text_domain": "practical-solutions",
    "domain_path": "/languages",
    "tags": [
      "blog",
      "business",
      "education",
      "rtl-language-support",
      "custom-colors",
      "custom-logo",
      "custom-menu",
      "featured-images",
      "footer-widgets",
      "full-site-editing",
      "block-patterns",
      "block-styles",
      "wide-blocks"
    ]
  }
}